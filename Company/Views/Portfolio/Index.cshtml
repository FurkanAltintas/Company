@model Company.Models.PortfolioType

<div id="portfolio" class="portfolio-area area-padding fix">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-headline text-center">
                    <h2>Our Portfolio</h2>
                </div>
            </div>
        </div>
        <div class="row wesome-project-1 fix">
            <!-- Start Portfolio -page -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (var item in Model.PortfolioCategory)
                    {
                        <li data-filter=".filter-@item.Title">@item.Title</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row awesome-project-content portfolio-container">
            
            @foreach (var item in Model.Portfolio)
            {
                <div class="col-md-4 col-sm-4 col-xs-12 portfolio-item filter-@item.PortfolioCategory.Title">
                    <div class="single-awesome-project">
                        <div class="awesome-img">
                            <a href="#"><img src="@item.Image" alt="" /></a>
                            <div class="add-actions text-center">
                                <div class="project-dec">
                                    <a class="portfolio-lightbox" data-gallery="myGallery" href="@item.Image">
                                        <h4>@item.Title</h4>
                                        <span>@item.SubTitle</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
